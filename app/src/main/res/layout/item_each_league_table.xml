<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="48dp"
    android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/table_pos"
        android:layout_width="46dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@drawable/table_content_cell_bg"
        android:text="1"
        />

    <ImageView
        android:id="@+id/table_team_logo"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center_vertical"
        android:src="@mipmap/ic_launcher_foreground"></ImageView>

    <TextView
        android:id="@+id/table_team_name"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@drawable/table_content_cell_bg"
        android:text="Mbabane Swallows"
        />

    <TextView
        android:id="@+id/table_P"
        android:layout_width="46dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@drawable/table_content_cell_bg"
        android:text="3"
        />

    <TextView
        android:id="@+id/table_D"
        android:layout_width="46dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@drawable/table_content_cell_bg"
        android:text="9"
        />

    <TextView
        android:id="@+id/table_L"
        android:layout_width="46dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@drawable/table_content_cell_bg"
        android:text="2"
        />
    <TextView
        android:id="@+id/table_GF"
        android:layout_width="46dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@drawable/table_content_cell_bg"
        android:text="9"
        />
    <TextView
        android:id="@+id/table_GA"
        android:layout_width="46dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@drawable/table_content_cell_bg"
        android:text="8"
        />
    <TextView
        android:id="@+id/table_GD"
        android:layout_width="46dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@drawable/table_content_cell_bg"
        android:text="1"
        />
    <TextView
        android:id="@+id/table_PTS"
        android:layout_width="46dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@drawable/table_content_cell_bg"
        android:text="18"
        />


</LinearLayout>